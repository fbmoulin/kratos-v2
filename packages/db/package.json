    "db:studio": "drizzle-kit studio",
    "lint": "eslint src/",
    "test": "vitest run",
    "test:coverage": "vitest run --coverage",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "@kratos/core": "workspace:*",
    "dotenv": "^16.4.0",
    "drizzle-orm": "^0.39.0",
    "pino": "^9.6.0",
    "postgres": "^3.4.0"
  },
  "devDependencies": {
    "drizzle-kit": "^0.30.0",
    "tsx": "^4.19.0",
    "typescript": "^5.7.0",
    "vitest": "^3.2.0"
  }
