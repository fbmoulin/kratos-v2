{
  "name": "kratos-v2",
  "version": "2.6.0",
  "private": true,
  "type": "module",
  "description": "KRATOS v2 - Knowledge-driven Reasoning and Automated Text Output System",
  "scripts": {
    "dev": "turbo run dev",
    "build": "turbo run build",
    "lint": "turbo run lint",
    "test": "turbo run test",
    "test:coverage": "turbo run test:coverage",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "seed": "tsx scripts/seed-precedents.ts",
    "e2e": "tsx scripts/test-e2e-full.ts",
    "e2e:playwright": "playwright test --config e2e/playwright.config.ts",
    "clean": "turbo run clean && rm -rf node_modules"
  },
  "devDependencies": {
    "@playwright/test": "^1.58.2",
    "@types/node": "^22.0.0",
    "@vitest/coverage-v8": "^3.2.0",
    "dotenv": "^16.4.0",
    "eslint": "^9.20.0",
    "eslint-config-prettier": "^10.1.8",
    "globals": "^17.3.0",
    "prettier": "^3.5.0",
    "turbo": "^2.4.0",
    "typescript": "^5.7.0",
    "typescript-eslint": "^8.55.0"
  },
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=9.0.0"
  },
  "packageManager": "pnpm@9.15.0"
}
